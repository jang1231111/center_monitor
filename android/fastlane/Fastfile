# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:android) 

platform :android do
  desc "Runs all the tests"
  lane :test do
    gradle(task: "test")
  end  

  desc "Submit a new Beta Build to Crashlytics Beta"
  lane :beta do
    # gradle(task: "clean bundleRelease") # APK 대신 AAB 빌드
    upload_to_play_store(  
      json_key_data: "play-store-api.json",
      track: "internal",
      aab: "../build/app/outputs/bundle/release/app-release.aab"
      
      # aab: "/Users/jang-yuncheol/Desktop/Devolop/center_monitor/build/app/outputs/bundle/release/app-release.aab" # ✅ 절대 경로 사용
      # aab: "../build/app/outputs/bundle/release/app-release.aab" # ✅ 절대 경로 사용
    )
  end

  desc "Deploy a new version to the Google Play"
  lane :deploy do
    gradle(task: "clean bundleRelease") # APK 대신 AAB 빌드
    upload_to_play_store(
      json_key_file: "./play-store-api.json",
      track: "internal",
      aab: "/Users/jang-yuncheol/Desktop/Devolop/center_monitor/build/app/outputs/bundle/release/app-release.aab" # ✅ 절대 경로 사용
    )
  end
end
